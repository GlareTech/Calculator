cal_ui:

<cal_ui>:

    canvas.before:
        Color:
            rgba: .4,.4,.2,1
        Rectangle:
            size : self.width,self.height
    padding: "20dp"
    spacing: "5dp"
    orientation: "vertical"
    Label:
        font_size : 60
        text : root.screen

    BoxLayout:
        spacing: "5dp"
        ToggleButton:
            text: "on"
            state: "down"
            on_release: root.power(self)
            on_press : root.show(self)
        Button:
            id : del
            text: "<-"
            on_press : root.show(self)
        Button:
            id : rem
            text: "%"
            on_press : root.show(self)
        Button:
            id : divide
            text: "/"
            on_press : root.show(self)

    BoxLayout:
        spacing: "5dp"
        Button:
            id : seven
            text: "7"
            on_press : root.show(self)
        Button:
            id : eight
            text: "8"
            on_press : root.show(self)
        Button:
            id : nine
            text: "9"
            on_press : root.show(self)
        Button:
            id: star
            text: "*"
            on_press : root.show(self)
    BoxLayout:
        spacing: "5dp"
        Button:
            id: four
            text: "4"
            on_press : root.show(self)
        Button:
            id: five
            text: "5"
            on_press : root.show(self)
        Button:
            id: six
            text: "6"
            on_press : root.show(self)
        Button:
            id: minus
            text: "-"
            on_press : root.show(self)
    BoxLayout:
        spacing: "5dp"
        Button:
            id: one
            text: "1"
            on_press : root.show(self)
        Button:
            id: two
            text: "2"
            on_press : root.show(self)
        Button:
            id: three
            text: "3"
            on_press : root.show(self)
        Button:
            id: plus
            text: "+"
            on_press : root.show(self)
    BoxLayout:
        spacing: "5dp"

        Button:
            id: zero
            text: "0"
            on_press : root.show(self)
        Button:
            id: dot
            text: "."
            on_press : root.show(self)
        Button:
            id: c
            text: "C"
            on_press : root.show(self)
        Button:
            id: equals
            text: "="
            on_press : root.show(self)
